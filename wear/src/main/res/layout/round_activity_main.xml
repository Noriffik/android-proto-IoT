<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="0dp"
    tools:context="io.relayr.iotsmartphone.MainActivity"
    tools:deviceIds="wear_round">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:layout_box="all">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"/>

        <android.support.wearable.view.CardFrame
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/icon_size"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimaryDark"/>

                <android.support.wearable.view.DelayedConfirmationView
                    android:id="@+id/send_btn"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_margin="0dp"
                    android:padding="0dp"     android:src="@drawable/ic_cancel"
                    android:textColor="@color/colorPrimaryDark"
                    app:circle_border_color="@color/colorAccent"
                    app:circle_border_width="4dp"
                    app:circle_color="@color/colorAccent"
                    app:circle_radius="@dimen/btn_radius"/>
            </LinearLayout>
        </android.support.wearable.view.CardFrame>
    </FrameLayout>
</android.support.wearable.view.BoxInsetLayout>
