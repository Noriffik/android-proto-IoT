<?xml version="1.0" encoding="utf-8"?>
<io.relayr.iotsmartphone.widget.DeviceView
    style="@style/MatchMatch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:padding="@dimen/default_padding">

    <TextView
        style="@style/SubtitleText"
        android:layout_gravity="center_horizontal"
        android:text="@string/dv_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/control_input"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/big_padding"
        android:hint="@string/dv_device_name_hint">

        <EditText
            android:id="@+id/device_name"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/big_padding"
            android:layout_marginRight="@dimen/big_padding"
            android:gravity="center_horizontal"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/device_create_btn"
        style="@style/NormalText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/big_padding"
        android:gravity="center_horizontal"
        android:text="@string/dv_button_create"
        android:textStyle="bold"/>
</io.relayr.iotsmartphone.widget.DeviceView>
