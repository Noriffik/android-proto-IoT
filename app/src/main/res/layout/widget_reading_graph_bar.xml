<?xml version="1.0" encoding="utf-8"?>
<io.relayr.iotsmartphone.tabs.readings.widgets.ReadingWidgetGraphBar
    style="@style/MatchWrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/default_padding_half">

    <android.support.v7.widget.CardView
        style="@style/CardViewReading">

        <LinearLayout
            style="@style/MatchWrap"
            android:padding="@dimen/default_padding">

            <include layout="@layout/widget_reading_header"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/history_chart"
                style="@style/MatchMatch"
                android:layout_height="150dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</io.relayr.iotsmartphone.tabs.readings.widgets.ReadingWidgetGraphBar>