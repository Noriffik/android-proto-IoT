<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--TEXT-->
    <style name="TitleText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
    </style>

    <style name="SubtitleText" parent="TitleText">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
    </style>

    <style name="NormalText" parent="SubtitleText">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SmallText" parent="NormalText">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TinyText" parent="SmallText">
        <item name="android:textSize">@dimen/tiny_text</item>
    </style>

    <style name="SettingsSwitch" parent="NormalText">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:minWidth">@dimen/settings_switch_width</item>
        <item name="android:layout_width">@dimen/settings_switch_width</item>
        <item name="android:width">@dimen/settings_switch_width</item>
    </style>

    <!--WIDGET-->
    <style name="MatchMatch" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchMatchHor" parent="MatchMatch">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWrap" parent="MatchMatch">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrapHor" parent="MatchWrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapWrap" parent="MatchMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrapHor" parent="WrapWrap">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
